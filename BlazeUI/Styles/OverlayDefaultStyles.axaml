<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BlazeUI">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>
    
    <!-- Add Styles Here -->
    <Style Selector="Grid.OverlayBackground">
        <Setter Property="Background" Value="{DynamicResource OverlayCover}"></Setter>
    </Style>
    
    <Style Selector="Border.OverlayPopup">
        <Setter Property="CornerRadius" Value="10"></Setter>
        <Setter Property="ClipToBounds" Value="True"></Setter>
    </Style>
    
    <Style Selector="Border.PopupCardTop">
        <Setter Property="BorderThickness" Value="0,0,0,2"></Setter>
        <Setter Property="BorderBrush" Value="{DynamicResource SecondaryBorder}"></Setter>
        <Setter Property="Background" Value="{DynamicResource SecondaryCardBackground}"></Setter>
    </Style>
    
    <Style Selector="Border.PopupCardBody">
        <Setter Property="Background" Value="{DynamicResource PrimaryCardBackground}"></Setter>
    </Style>
    
    <Style Selector="TextBlock.PopupCardTitle">
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="FontWeight" Value="ExtraLight"></Setter>
    </Style>
    
    <Style Selector="TextBlock.GameOverTitle">
        <Setter Property="FontSize" Value="40"></Setter>
        <Setter Property="FontWeight" Value="Light"></Setter>
    </Style>
    
    <Style Selector="local|ProgressBar.InitializeProgressBar">
        <Setter Property="Background" Value="{DynamicResource PrimaryProgressBarBackground}"></Setter>
    </Style>
    
    <Style Selector="Border.InitializeProgressBarFilled">
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Setter Property="Background" Value="{DynamicResource PrimaryProgressBarColor}"></Setter>
    </Style>
    
    <Style Selector="TextBlock.PopupSecondary">
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="Margin" Value="0,15,0,15"></Setter>
        
        <Setter Property="FontSize" Value="17"></Setter>
        <Setter Property="FontWeight" Value="ExtraLight"></Setter>
    </Style>
    
    <Style Selector="StackPanel.InitializeProgressBarContainer">
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
    </Style>
    
    <Style Selector="Button.GameOverPopupButton">
        <Setter Property="Margin" Value="0,10,0,0"></Setter>
        <Setter Property="Width" Value="250"></Setter>
        <Setter Property="Height" Value="50"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
        <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
        
        <Setter Property="Background" Value="{DynamicResource SecondaryCardBackground}"></Setter>
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="FontWeight" Value="ExtraLight"></Setter>
        <Setter Property="FontSize" Value="20"></Setter>
        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SecondaryBorder}"></Setter>
        </Style>
        <Style Selector="^:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SecondaryBorder}"></Setter>
        </Style>
    </Style>
</Styles>
