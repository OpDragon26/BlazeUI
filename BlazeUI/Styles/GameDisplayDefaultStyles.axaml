<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
    
    <Style Selector="Border.GameDisplayWindow">
        <Setter Property="Padding" Value="20"></Setter>
        
        <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"></Setter>
        <Setter Property="BorderBrush" Value="{DynamicResource SecondaryBorder}"></Setter>
        <Setter Property="BorderThickness" Value="2"></Setter>
        <Setter Property="CornerRadius" Value="20"></Setter>
    </Style>
    
    <Style Selector="Grid.GameEntry">
        <Setter Property="Height" Value="50"></Setter>
    </Style>
    
    <Style Selector="TextBlock.Indexer">
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="FontWeight" Value="ExtraLight"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
    </Style>
    
    <Style Selector="Button.GameEntryRow">
        <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
        <Setter Property="VerticalAlignment" Value="Stretch"></Setter>
        <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
        <Setter Property="CornerRadius" Value="0"></Setter>
        <Setter Property="FontSize" Value="25"></Setter>
        <Setter Property="FontWeight" Value="Light"></Setter>
        
        <Setter Property="Background" Value="Transparent"></Setter>
        
        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SecondaryCardBackground}"></Setter>
        </Style>
        <Style Selector="^:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SecondaryCardBackground}"></Setter>
        </Style>
    </Style>
    
    <Style Selector="Button.SelectedEntry">
        <Setter Property="CornerRadius" Value="5"></Setter>
        <Setter Property="Background" Value="{DynamicResource SecondaryCardBackground}"></Setter>
        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SecondaryBorder}"></Setter>
        </Style>
        <Style Selector="^:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SecondaryBorder}"></Setter>
        </Style>
    </Style>
</Styles>
